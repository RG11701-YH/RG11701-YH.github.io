package com.dyt;

public class CEllipse extends CShape {
	public CEllipse() {}
	public CEllipse(int x,int y,int w,int h) {
		orgX=x;
		orgY=y;
		width=w;
		heigh=h;
	}
	public void Draw() {}
    public boolean isMatched(CShape pnt) {
    	if (((double)(pnt.orgX-orgX)*(pnt.orgX-orgX) / (width*width / 4) + (double)(pnt.orgY-orgY)*(pnt.orgY-orgY) / (heigh*heigh / 4)) <= 1)
    		return true;
    	else
    		return false;
    }
    public void Serialize() {}
    public void setShapeValue(int x,int y,int w,int h,String t) {
    	orgX=x;
    	orgY=y;
    	width=w;
    	heigh=h;
    }
    public void getShapeValue(int x,int y,int w,int h,String t) {
    	x=orgX;
    	y=orgY;
    	w=width;
    	h=heigh;
    }
    private int width;
    private int heigh;
}
