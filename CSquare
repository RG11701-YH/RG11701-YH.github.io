package com.dyt;

public class CSquare extends CShape {
	public CSquare() {}
	public  CSquare(int x,int y,int w) {
		orgX=x;
		orgY=y;
		width=w;
	}
	public void Draw() {}
    public boolean isMatched(CShape pnt) {
    	if(pnt.orgX>=(orgX-width/2)&&pnt.orgX<=(orgX+width/2)&&pnt.orgY>=(orgY-width/2)&&pnt.orgY<=(orgY+width/2))
    		return true;
    	else
    		return false;
    }
    public void Serialize() {}
    public void setShapeValue(int x,int y,int w,int h,String t) {
    	orgX=x;
		orgY=y;
		width=w;
    }
    public void getShapeValue(int x,int y,int w,int h,String t) {
    	x=orgX;
    	y=orgY;
    	w=width;
    }
    private int width;
}
